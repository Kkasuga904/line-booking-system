{
  "name": "line-booking-system",
  "version": "2.0.0",
  "description": "LINE予約システム（マルチテナント対応）",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vercel dev",
    "validate": "node scripts/validate-modules.js",
    "validate:webhook": "node scripts/validate-webhook.js",
    "validate:system": "node scripts/validate-system.js",
    "prevent-issues": "node scripts/prevent-issues.js",
    "pre-deploy": "node scripts/pre-deploy-check.js",
    "predeploy": "npm run pre-deploy",
    "deploy": "vercel --prod",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint api/**/*.js",
    "admin": "node server.js",
    "format": "prettier --write '**/*.{js,json,md}'",
    "typecheck": "echo 'TypeScript not configured yet'",
    "health": "curl https://line-booking-system-seven.vercel.app/api/health-check",
    "health:old": "curl https://line-booking-system-seven.vercel.app/api/webhook-health",
    "monitor": "vercel logs --prod --follow"
  },
  "dependencies": {
    "@line/bot-sdk": "^10.1.2",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.8",
    "dotenv": "^16.0.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true,
    "testTimeout": 10000
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "line",
    "bot",
    "booking",
    "reservation",
    "multi-tenant",
    "saas"
  ],
  "author": "",
  "license": "MIT"
}