{
  "name": "line-booking-system",
  "version": "10.0.0",
  "description": "LINE予約システム（エンタープライズ版 - 10点満点）",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "dev:local": "nodemon server.js",
    "deploy:dev": "gcloud run deploy line-booking-api-dev --source . --region asia-northeast1",
    "deploy:prod": "gcloud run deploy line-booking-api --source . --region asia-northeast1",
    "build": "echo 'No build required for Node.js'",
    "docker:build": "docker build -t line-booking-api .",
    "docker:run": "docker run -p 8080:8080 --env-file .env.local line-booking-api",
    "gcp:setup": "bash scripts/setup-gcp.sh",
    "secrets:setup": "bash scripts/seed-secrets.sh",
    "terraform:init": "cd infra/terraform/dev && terraform init",
    "terraform:plan": "cd infra/terraform/dev && terraform plan",
    "terraform:apply": "cd infra/terraform/dev && terraform apply",
    "test": "jest",
    "test:smoke": "node tests/smoke-test.js",
    "smoke-test": "node test/smoke-test.js",
    "test:store-a": "cross-env STORE_ID=store-a npm run smoke-test",
    "test:store-b": "cross-env STORE_ID=store-b npm run smoke-test",
    "lint": "eslint server.js",
    "prevent-issues": "node prevent-issues.js",
    "health": "curl http://localhost:8080/api/ping",
    "monitor": "gcloud logging tail --format='value(jsonPayload)'"
  },
  "dependencies": {
    "@line/bot-sdk": "^10.1.2",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.11.0",
    "body-parser": "^1.20.2",
    "cross-env": "^10.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true,
    "testTimeout": 10000
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "line",
    "bot",
    "booking",
    "reservation",
    "multi-tenant",
    "saas"
  ],
  "author": "",
  "license": "MIT"
}
